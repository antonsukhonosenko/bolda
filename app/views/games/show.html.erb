<h1>Game: <span style="color:red"><%= @game.name %></span></h1>
<%= render "error_messages", :target => @game %>
<table>
<tr>

<div id="row_letters" style="display:none"><%= @game.row_letters %></div>

<% index = 1 %>

<% @game.letters.mb_chars.split(//).each do |item| %>

    <td class="lettercell" id="cell_<%= index %>"><%= item %></td>

    <% if index % @game.row_letters == 0 %>
      </tr><tr>
    <% end %>

    <% index += 1 %>

<% end %>

</tr>
</table>

<table><tr id="word"></tr></table><br/>
<input type="button" id="claim_word" value="Claim word" />
<input type="button" id="skip_turn" value="Skip turn" />